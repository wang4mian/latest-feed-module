  // Send selected articles to Google Docs
  async function sendToGoogleDocs() {
    const selectedIds = getSelectedArticles();
    if (selectedIds.length === 0) {
      alert('请先选择要发送的文章');
      return;
    }

    try {
      // 收集选中文章的完整数据
      const articlesData = [];
      
      for (const articleId of selectedIds) {
        const articleCard = document.querySelector(`[data-article-id="${articleId}"]`);
        if (articleCard) {
          // 从DOM中提取文章数据
          const title = articleCard.querySelector('h3 a').textContent.trim();
          const source = articleCard.querySelector('.text-blue-600')?.textContent.trim() || '';
          const summary = articleCard.querySelector(`#summary-${articleId}`)?.textContent.trim() || '';
          const markdownContent = articleCard.querySelector(`#markdown-text-${articleId}`)?.value || '';
          const tagsElements = articleCard.querySelectorAll('.bg-gray-100');
          const tags = Array.from(tagsElements).map(el => el.textContent.replace('#', '').trim());
          
          articlesData.push({
            id: articleId,
            title: title,
            source: source,
            summary: summary,
            markdown: markdownContent,
            tags: tags,
            url: articleCard.querySelector('h3 a').href
          });
        }
      }

      // 构造发送到Google Apps Script的数据
      const payload = {
        timestamp: new Date().toISOString(),
        totalArticles: articlesData.length,
        articles: articlesData
      };

      // 显示加载状态
      const sendBtn = document.getElementById('send-to-google-docs-btn');
      const originalText = sendBtn.innerHTML;
      sendBtn.innerHTML = `
