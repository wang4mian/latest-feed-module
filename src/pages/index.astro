<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KUATO - 测试部署</title>
</head>
<body>
    <div style="padding: 40px; font-family: sans-serif; text-align: center;">
        <h1>🚀 KUATO 系统</h1>
        <p>系统正在运行中...</p>
        <p>当前时间: <span id="time"></span></p>
        
        <div style="margin-top: 20px;">
            <button onclick="testAPI()" style="padding: 10px 20px; font-size: 16px;">
                测试API连接
            </button>
        </div>
        
        <div id="result" style="margin-top: 20px; padding: 10px; background: #f0f0f0; border-radius: 5px; display: none;">
        </div>
    </div>

    <script>
        // 显示当前时间
        document.getElementById('time').textContent = new Date().toLocaleString('zh-CN');
        
        // 测试API
        async function testAPI() {
            const resultDiv = document.getElementById('result');
            resultDiv.style.display = 'block';
            resultDiv.innerHTML = '正在测试API...';
            
            try {
                const response = await fetch('/api/hello');
                const data = await response.json();
                
                if (data.success) {
                    resultDiv.innerHTML = `✅ API测试成功！<br>消息: ${data.message}<br>时间: ${data.timestamp}`;
                    resultDiv.style.background = '#d4edda';
                } else {
                    resultDiv.innerHTML = `❌ API测试失败: ${data.message}`;
                    resultDiv.style.background = '#f8d7da';
                }
            } catch (error) {
                resultDiv.innerHTML = `❌ API请求错误: ${error.message}`;
                resultDiv.style.background = '#f8d7da';
            }
        }
        
        // 全局函数
        window.testAPI = testAPI;
    </script>
</body>
</html>