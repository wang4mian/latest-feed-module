      summary.classList.remove('line-clamp-none');
      summary.classList.add('line-clamp-2');
      fullContent.classList.add('hidden');
      if (strategic) strategic.classList.add('hidden');
      expandBtn.textContent = 'æ˜¾ç¤ºæ›´å¤š â†“';
