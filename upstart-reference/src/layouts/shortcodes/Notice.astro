---
export interface Props {
  type?: "info" | "warning" | "success" | "error"; // Type of notice
  title?: string; // Optional title for the notice
  children: any; // Content inside the notice
}

const colors = {
  info: "bg-blue-50/5 border-blue-400 text-blue-400",
  warning: "bg-yellow-50/5 border-yellow-400 text-yellow-400",
  success: "bg-green-50/5 border-green-400 text-green-400",
  error: "bg-red-50/5 border-red-400 text-red-400",
};

const { type, title } = Astro.props;
const colorClasses = type
  ? colors[type]
  : "bg-gray-50/5 border-gray-400 text-gray-400";
---

<div class={`not-prose border-l-4 mb-4 p-4 ${colorClasses}`}>
  {title && <p class="mb-1 font-medium" set:html={title} />}
  <div class="prose-styles">
    <slot />
  </div>
</div>
